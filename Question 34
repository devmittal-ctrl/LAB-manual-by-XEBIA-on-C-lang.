#include <stdio.h>
#include <math.h>
int main(){
   float f,g;
   char com;
    printf("You have to choose which command to want ot run ");
   printf("\nfor area\ta\nfor circumference\tc\nfor diameter\td\n");
   scanf("%c",&com);
   printf("enter the radius ");
   scanf("%f",&f);
   switch(com){
      case 'a':
      printf("the area of circle is %f ",3.14*f*f);
      break;
      case 'c':
      printf("the circumference of circle is %f ",2*3.14*f);
      break;
      case 'd':
      printf("the diameter of circle is %f",2*f);
      break;
      default :
      printf("you choose a wrong command ");
   }
   return 0;
}
