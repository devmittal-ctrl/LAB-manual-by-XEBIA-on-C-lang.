#include <stdio.h>
int main(){
   int day;
   printf("enter the number ");
   scanf("%d",&day);
   switch(day) {
      case 1: 
       printf("monday");
      break;
      case 2: 
       printf("tuesday");
      break;
     case 3:
      printf("wednesday");
      break;
      case 4:
      printf("thrusday");
      break;
    case 5:
      printf("friday");
      break;
      case 6:
      printf("saturaday");
      break;
     case 7:
       printf("sunday");
      break;
      default:
      printf("pls enter a valid input b/w 1 and 7");
   }
   return 0;
}
