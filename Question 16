#include <stdio.h>
int main(){
// checking the divisiblity of number by 3 and 5
int n;
printf("enter the number you have to check ");
scanf("%d",&n);
if(n%3==0 && n%5==0){
   printf("%d is divisible by both 3 and 5 ",n);
}
else if(n%3==0 || n%5==0){
   if(n%3==0){
      printf("%d is only divisible by 3",n);
   }
   else{
      printf("%d is only divisible by 5",n);
   }
}
else{
   printf("%d is the number which is not divisible by both 3 and 5",n);
}
   return 0;
}
