#include <stdio.h>
#include <stdlib.h>
int main(){
   // checking the smallest number from the 3 user inut numbers
   int a,s,d;
   printf("enter the first numbers : ");
   scanf("%d",&a);
   printf("enter the second numbers : ");
   scanf("%d",&s);
   printf("enter the third numbers : ");
   scanf("%d",&d);
   // these are condition which are formed inside the nested if-else
   if(a<s && a<d){
      printf("the %d is smallest ",a);
   }
   else if(s<a && s<d){
      printf("the %d is smallest ",s);
   }
   else if (a==s && s==d){
      printf("you entered all equal numbers");
   }
   else{
      printf("the %d is smallest",d);
   } 
      return 0;
}
