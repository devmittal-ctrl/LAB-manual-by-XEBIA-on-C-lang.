#include <stdio.h>
#include <stdlib.h>
int main(){
   // checking the typed number is prime or not
   // solving by using flag technique
   int n,max=1;
   printf("enter the number in which you have to practise ");
   scanf("%d",&n);
   for(int i=2;i<=n-1;i++){
      if(n%i==0){
         max=0;
         break;
      }
      else{
         max=1;
         break;
      }
   }
   if(max==0){
      printf("the composite number ");
   }
   if(max==1){
      printf("the prime number ");
   }
      return 0;
}
