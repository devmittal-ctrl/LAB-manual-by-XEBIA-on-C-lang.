#include <stdio.h>
#include <stdlib.h>
int main(){
   // perfect number is number whose all divisors sum equal to number itself
   int n,max=0;
   printf("enter the number in which you have to practise ");
   scanf("%d",&n);
   for(int i=1;i<=n-1;i++){
      if(n%i==0){
         printf("the factor of the %d is : %d\n",n,i);
         max=max+i;
      }
      else{
         continue;
      }
   }
   if(max==n){
      printf("%d is a perfect number ",n);
   }
   else{
       printf("%d is not a perfect number ",n);
   }
      return 0;
}
