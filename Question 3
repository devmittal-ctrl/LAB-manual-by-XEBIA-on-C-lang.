#include <stdio.h>
int main(){
   // the area of circle is pie*r*r
   // for being on safer side we take radius as float also
   float radius;
   printf("enter the radius of the circle ");
   scanf("%f",&radius);
   // now we apply formula
   printf("%.2f is the area of the circle whose radius is %f ",radius*radius*3.14,radius);
    return 0;
}
