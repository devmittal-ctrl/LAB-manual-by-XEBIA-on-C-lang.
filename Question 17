#include <stdio.h>
int main(){
// here in this I perform 2 method by if else and switch case 
   // checking the typed letter is a vowel or consonent
   // vowels are a,e,i,o,u
   char ch;
   printf("enter the letter ");
   scanf("%c",&ch);
   // if(ch=='a' || ch=='e' || ch=='i' || ch=='o' || ch=='u' ){
   //    printf("the letter you entered is vowel");
   // }
   // else {
   //     printf("the letter you entered is consonent");
   // }
   switch(ch){
      case 'a': 
      printf("%c is a vowel",ch);
      break;
      case 'e': 
      printf("%c is a vowel",ch);
      break;
      case 'i': 
      printf("%c is a vowel",ch);
      break;
      case 'o': 
      printf("%c is a vowel",ch);
      break;
      case 'u': 
      printf("%c is a vowel",ch);
      break;
      default: 
      printf("%c is a consonent",ch);
      }
   return 0;
}
